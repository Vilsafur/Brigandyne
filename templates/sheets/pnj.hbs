<form class="{{cssClass}} pnj" autocomplete="off">
  <header class="sheet-header">
    <img src="{{data.img}}" data-edit="img" title="{{data.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{data.name}}" placeholder="Name" /></h1>
  </header>
  <div class="sheet-content">
    <div class="haut">
      <div class="item taille">
        <label>taille</label>
        <input type="text" name="data.taille" value="{{data.system.taille}}" data-dtype="Number" />
      </div>
      <div class="item poids">
        <label>poids</label>
        <input type="text" name="data.poids" value="{{data.system.poids}}" data-dtype="Number" />
      </div>
      <div class="item main">
        <label>main</label>
        <select name="data.main">
          {{#select data.system.main}}
          {{#each config.mainDirectrice as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>
      <div class="item description">
        <label>description</label>
        <input type="text" name="data.description" value="{{data.system.description}}" />
      </div>
    </div>
    <div class="middle">
      <div class="gauche">
        <div class="equipement">
          <h1>Equipements</h1>
        </div>
      </div>
      <div class="centre">
        <div class="competences">
          <div class="title">Compétences</div>
          <div class="title">Base</div>
          <div class="title">Modificateur</div>
          {{#each data.system.competences as |competence nom| }}
          <div>{{ucfirst nom}}</div>
          <div><input type="text" name="data.competences.{{nom}}" value="{{competence}}"></div>
          <div class="modifier">{{modifier competence }}</div>
          {{/each }}
        </div>
      </div>
      <div class="droite">
        <div class="initiative"></div>
        <div class="protection"></div>
        <div class="armesMelee">
          <div class="title">Armes de mélée</div>
          <div class="title">Dégats</div>
          <div class="title">Allonge</div>
          <div class="title">Spécial</div>
          <div></div>
          {{#each armesMelees as |arme nom| }}
          <div>{{arme.name}}</div>
          <div>{{arme.degats}}</div>
          <div>{{arme.allonge}}</div>
          <div>{{arme.special}}</div>
          <div>
            <a class="item-edit" data-item-id="{{arme._id}}"><i class="fas fa-edit" title="{{localize "brigandyne.sheet.updateItem"}}"></i></a>
            <a class="item-delete" data-item-id="{{arme._id}}"><i class="fas fa-trash" title="{{localize "brigandyne.sheet.deleteItem"}}"></i></a>
          </div>
          {{/each }}
        </div>
        <div class="armesDistance">
          <div class="title">Armes à distance</div>
          <div class="title">Dégats</div>
          <div class="title">Allonge</div>
          <div class="title">Spécial</div>
          <div></div>
          {{#each armesDistances as |arme nom| }}
          <div>{{arme.name}}</div>
          <div>{{arme.degats}}</div>
          <div>{{arme.allonge}}</div>
          <div>{{arme.special}}</div>
          <div>
            <a class="item-edit" data-item-id="{{arme._id}}"><i class="fas fa-edit" title="{{localize "brigandyne.sheet.updateItem"}}"></i></a>
            <a class="item-delete" data-item-id="{{arme._id}}"><i class="fas fa-trash" title="{{localize "brigandyne.sheet.deleteItem"}}"></i></a>
            </div>
          {{/each }}
        </div>
      </div>
    </div>
    <div class="bas">
        <div class="item argent">
          <label>Argent</label>
          <input type="text" name="data.argent" value="{{data.system.argent}}" />
        </div>
        <div class="item vitalite">
          <label>Vitalité</label>
          <input type="text" name="data.vitalite" value="{{data.system.vitalite}}" />
        </div>
        <div class="item sang-froid">
          <label>Sang-froid</label>
          <input type="text" name="data.sang_froid" value="{{data.system.sang_froid}}" />
        </div>
    </div>
  </div>
</form>
