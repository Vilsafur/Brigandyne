<form class="{{cssClass}}" autocomplete="off">
  {{#if hasTarget}}
  <div class="form-group">
    <label for="caracteristique">Caractéristique</label>
    <div class="form-fields">
      <select name="caracteristique" id="caracteristique">
        <option value="combat">Combat</option>
        <option value="connaissances">Connaissances</option>
        <option value="discretion">Discretion</option>
        <option value="endurance">Endurance</option>
        <option value="force">Force</option>
        <option value="habilete">Habilete</option>
        <option value="magie">Magie</option>
        <option value="mouvement">Mouvement</option>
        <option value="perception">Perception</option>
        <option value="sociabilite">Sociabilite</option>
        <option value="survie">Survie</option>
        <option value="tir">Tir</option>
        <option value="volonte">Volonte</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label>Modificateur supplémentaire</label>
    <div class="form-fields">
      <input name="modo" value="" data-dtype="Number" />
    </div>
  </div>
  {{else}}
  <div class="form-group">
    <div class="form-fields">
      <label for="modo">Modificateur (Modo cible compris)</label>
      <input name="modo" value="" data-dtype="Number" />
    </div>
  </div>
  {{/if}}
</form>
